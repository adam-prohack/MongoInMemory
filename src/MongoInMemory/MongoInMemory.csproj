<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <RuntimeIdentifiers>win10;ubuntu.18.04;osx</RuntimeIdentifiers>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <Authors>Adam Brzozowski and contributors</Authors>
    <Company>Adam Brzozowski</Company>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <PropertyGroup>
    <MongoDbVersion>4.2.0</MongoDbVersion>
    <MongoDbWindows10Infix>win32-x86_64-2012plus</MongoDbWindows10Infix>
    <MongoDbUbuntu1804Infix>linux-x86_64-ubuntu1804</MongoDbUbuntu1804Infix>
    <MongoDbMacOSInfix>macos-x86_64</MongoDbMacOSInfix>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.9.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../resources/mongodb-$(MongoDbWindows10Infix)-$(MongoDbVersion)/bin/mongod.exe" Pack="true">
      <PackagePath>contentFiles/any/$(TargetFramework)/resources/mongodb-$(MongoDbWindows10Infix)/</PackagePath>
      <Link>resources/mongodb-$(MongoDbWindows10Infix)/mongod.exe</Link>
      <PackageCopyToOutput>true</PackageCopyToOutput>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="../../resources/mongodb-$(MongoDbUbuntu1804Infix)-$(MongoDbVersion)/bin/mongod" Pack="true">
      <PackagePath>contentFiles/any/$(TargetFramework)/resources/mongodb-$(MongoDbUbuntu1804Infix)/</PackagePath>
      <Link>resources/mongodb-$(MongoDbUbuntu1804Infix)/mongod</Link>
      <PackageCopyToOutput>true</PackageCopyToOutput>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="../../resources/mongodb-$(MongoDbMacOSInfix)-$(MongoDbVersion)/bin/mongod" Pack="true">
      <PackagePath>contentFiles/any/$(TargetFramework)/resources/mongodb-$(MongoDbMacOSInfix)/</PackagePath>
      <Link>resources/mongodb-$(MongoDbMacOSInfix)/mongod</Link>
      <PackageCopyToOutput>true</PackageCopyToOutput>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
